{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "node_modules/.prisma/client"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "prisma"
  ]
}
