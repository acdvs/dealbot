{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^check-types", "^lint", "^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {},
    "dev": {
      "dependsOn": ["^check-types"]
    },
    "web#build": {
      "dependsOn": ["lint"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "update-types": {
      "outputs": ["src/types.ts"]
    }
  }
}
