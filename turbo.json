{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["check-types", "lint", "^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {},
    "dev": {
      "dependsOn": ["check-types"]
    },
    "lint": {},
    "update-types": {
      "outputs": ["src/types.ts"]
    }
  }
}
