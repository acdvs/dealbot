{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "dependsOn": ["check-types", "lint"],
      "persistent": true
    },
    "lint": {},
    "start": {
      "persistent": true
    },
    "@dealbot/api#update-types": {
      "outputs": ["src/types.ts"]
    }
  }
}
