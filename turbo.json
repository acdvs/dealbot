{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["lint", "check-types", "^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["parallel-with-deps"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md"]
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md"],
      "persistent": true
    },
    "lint": {},
    "parallel-with-deps": {
      "dependsOn": ["^parallel-with-deps"]
    },
    "start": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md"],
      "persistent": true
    }
  }
}
